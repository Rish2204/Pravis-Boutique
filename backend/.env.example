################################
# Application Settings
################################
APP_NAME=Pravis Boutique API
DEBUG=True
ENVIRONMENT=development  # development, staging, production

################################
# API Settings
################################
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

################################
# Database Configuration
################################
# You can use either the full DATABASE_URL or individual components
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Individual database components (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pravis_collection_raw_data
DB_USER=your_username
DB_PASSWORD=your_password

################################
# Azure Configuration
################################
# Storage (for backups and media)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=backups

# App Service (for deployment)
AZURE_APP_SERVICE_NAME=pravis-boutique-api
AZURE_RESOURCE_GROUP=pravis-boutique-rg

################################
# Security Settings
################################
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your_secure_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30  # JWT token expiry in minutes
ALGORITHM=HS256  # JWT algorithm
